#! /usr/bin/env bash

# Installs Homebrew software.

if ! command -v brew > /dev/null; then
  ruby -e "$(curl --location --fail --silent --show-error https://raw.githubusercontent.com/Homebrew/install/master/install)"
  export PATH="/usr/local/bin:$PATH"
  printf "export PATH=\"/usr/local/bin:$PATH\"\n" >> $HOME/.bash_profile
fi

# ctags
brew install ctags

# readline
brew install readline

# openssl
brew install openssl

# Bash
brew install bash
brew install bash-completion

# diff so fancy
brew install diff-so-fancy

# ffmpeg
brew install ffmpeg

# FLAC
brew install flac

# FZF - fuzzy finder
brew install fzf

# git
brew install git

# graphviz
brew install graphviz

# htop
brew install htop

# libffi - foreign function interace library
brew install libffi

# libyaml - C library for emitting YAML
brew install libyaml

# lnav - log file navigator
brew install lnav

# mosh
brew install mosh

# Nginx
brew install nginx

# nodejs
brew install node

# pandoc
brew install pandoc

# parallel
brew install parallel

# pgcli - postgres cli
brew install pgcli

brew install postgresql

# ruby 
brew install ruby-install

# ShellCheck - a code analyzer for shell scripts
brew install shellcheck

# silver searcher - code searching with `ag`
brew install the_silver_searcher

# tmux
brew install tmux

# tree
brew install tree

# vim
brew install vim

# sox
brew install sox

# sqlite
brew install sqlite

# hdf5
brew install hdf5

# r
brew tap homebrew/science
brew install r

# macvim
brew install macvim

# wget
brew install wget

# trash
brew install trash
